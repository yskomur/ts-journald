{
  "name": "ts-journald",
  "version": "1.0.0",
  "description": "Pure TypeScript systemd-journald client using native Unix sockets",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "build:watch": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "author": "Yavuz Selim KOMUR <yskomur@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yskomur/ts-journal.git"
  },
  "bugs": {
    "url": "https://github.com/yskomur/ts-journal/issues"
  },
  "homepage": "https://github.com/yskomur/ts-journal#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^20.19.27",
    "rollup": "^3.23.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.MD",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "systemd",
    "journald",
    "logging",
    "typescript",
    "unix-socket"
  ],
  "dependencies": {
    "unix-dgram": "^2.0.7"
  }
}
